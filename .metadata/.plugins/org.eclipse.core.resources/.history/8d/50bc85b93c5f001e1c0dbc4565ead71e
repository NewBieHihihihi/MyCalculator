package view;

import javax.swing.JFrame;

public class MyWindow extends JFrame{
	public MyWindow()
	{
		
	}
	public void show()//cho phép hiển thị cửa sổ
	{
		this.setVisible(true);
	}
    //@over_loading
	public void show(String title)//cho phép hiển thị với tên tiêu đề
	{
		this.setTitle(title);
		this.setVisible(true);
	}
	//@over loading
	public void show(String title,int x,int y)//cho phép hiển thị với tên tiêu đề và kích thước
	{
		this.setTitle(title);
		this.setSize(x, y);
		this.setVisible(true);
	}
	public void show(String title,int x,int y,int x1,int x2)//cho phép hiển thị với tên tiêu đề và kích thước
	{
		this.setTitle(title);
		this.setSize(x, y);
		this.setLocation(x1, x2);
		this.setVisible(true);
	}

}
